{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-cmake",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "cmake --build .",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "kill",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "killall indiserver",
            "problemMatcher": []
        },
        {
            "label": "Build and Kill",
            "dependsOn": [
                "kill",
                "build-cmake"
            ]
        }
    ]
}